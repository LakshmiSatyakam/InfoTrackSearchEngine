@using SearchEngine.Models
@model SearchInput

@{
    ViewBag.Title = "InfoTrack Search";
}

<div class="jumbotron">
    <h2>InfoTrack Search Results</h2>
</div>

<div class="row">
    @using (Html.BeginForm("Index", null, FormMethod.Post, new { id = "searchForm" }))
    {
        <div class="row">
            <div class="form-group  col-md-4">
                @Html.LabelFor(model => model.SearchText, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SearchText, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.SearchUrl, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.EditorFor(model => model.SearchUrl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SearchUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-2">
                <label class="control-label">&nbsp;</label>
                <div class="">
                    <input type="submit" value="Search" class="form-submit btn btn-primary text-uppercase" style="width: 100%" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.SearchResult, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.SearchResult, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
    }
</div>
